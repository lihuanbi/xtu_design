.containeractive {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 
.title{
  width: 90%;
}

.newsitem{
 width: 95%;
 height: 230rpx;
 display: flex;
 flex-direction: row;
 margin: 10rpx;
 border: 2rpx solid rebeccapurple
}

.img{
 width: 260rpx;
 height: 200rpx;
 padding: 20rpx;
 float: right;
 margin-right: 0;
}

.news-text{
 display: flex;
 width: 65%;
 flex-direction: column;
 padding: 20rpx;
}

.bottext{
 width: 100%;
 height: 200rpx;
